<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/CED_F1_F4"
              android:orientation="vertical"
              android:splitMotionEvents="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis70"
        android:background="@drawable/shape_corner_shade"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dis20">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dis50"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/font16"/>

        <RelativeLayout
            android:id="@+id/frag_mine_info"
            android:layout_width="@dimen/dis50"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/message"/>

            <TextView
                android:id="@+id/frag_mine_tv_info"
                android:layout_width="@dimen/dis16"
                android:layout_height="@dimen/dis16"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dis8"
                android:background="@drawable/shape_round360_white"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/CE8_3C_3C"
                android:textSize="@dimen/font8"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/rollPagerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis208"
        app:rollviewpager_play_delay="3000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dis10"
        android:layout_marginTop="@dimen/dis5"
        android:layout_marginRight="@dimen/dis10"
        android:layout_marginBottom="@dimen/dis20"
        android:background="@drawable/shape_soid"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/frag_mine_md"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/mine1"
                    android:drawablePadding="@dimen/dis8"
                    android:gravity="center"
                    android:text="个人资料"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/dis0.5"
                android:layout_height="match_parent"
                android:background="@color/CE7_E7_E7"/>


            <LinearLayout
                android:id="@+id/frag_mine_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/mine2"
                    android:drawablePadding="@dimen/dis8"
                    android:gravity="center"
                    android:text="我的钱包"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/dis0.5"
                android:layout_height="match_parent"
                android:background="@color/CE7_E7_E7"/>

            <LinearLayout
                android:id="@+id/rl_my_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/mine3"
                    android:drawablePadding="@dimen/dis8"
                    android:gravity="center"
                    android:text="我的分享"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis0.5"
            android:background="@color/CE7_E7_E7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/frag_mine_order_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/mine4"
                    android:drawablePadding="@dimen/dis8"
                    android:gravity="center"
                    android:text="我的订单"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/dis0.5"
                android:layout_height="match_parent"
                android:background="@color/CE7_E7_E7"/>


            <LinearLayout
                android:id="@+id/frag_mine_collection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/mine5"
                    android:drawablePadding="@dimen/dis8"
                    android:gravity="center"
                    android:text="我的收藏"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/dis0.5"
                android:layout_height="match_parent"
                android:background="@color/CE7_E7_E7"/>

            <LinearLayout
                android:id="@+id/frag_mine_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/mine6"
                    android:drawablePadding="@dimen/dis8"
                    android:gravity="center"
                    android:text="地址管理"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis0.5"
            android:background="@color/CE7_E7_E7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/frag_mine_online_service"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/mine7"
                    android:drawablePadding="@dimen/dis8"
                    android:gravity="center"
                    android:text="客服中心"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/dis0.5"
                android:layout_height="match_parent"
                android:background="@color/CE7_E7_E7"/>


            <LinearLayout
                android:id="@+id/frag_mine_rl_setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/mine8"
                    android:drawablePadding="@dimen/dis8"
                    android:gravity="center"
                    android:text="系统设置"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/dis0.5"
                android:layout_height="match_parent"
                android:background="@color/CE7_E7_E7"/>

            <LinearLayout
                android:id="@+id/frag_mine_rl_about"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/mine9"
                    android:drawablePadding="@dimen/dis8"
                    android:gravity="center"
                    android:text="关于我们"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>