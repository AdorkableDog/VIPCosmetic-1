<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dis15"
                android:layout_marginRight="@dimen/dis15"
                android:layout_marginBottom="@dimen/dis5">

    <RelativeLayout
        android:id="@+id/rl_to_store_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_corner_ed_radius10"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dis8"
        android:paddingTop="@dimen/dis15"
        android:paddingRight="@dimen/dis8"
        android:paddingBottom="@dimen/dis15">

        <RelativeLayout
            android:id="@+id/frag_mine_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/mine_circle_bg"
            android:padding="1dp">

            <com.yj.cosmetics.widget.RoundedImageView.RoundedImageView
                android:id="@+id/item_partake_shop_img"
                android:layout_width="@dimen/dis50"
                android:layout_height="@dimen/dis50"
                android:scaleType="fitXY"
                android:src="@mipmap/default_avatar"
                app:riv_border_color="@color/white"
                app:riv_border_width="@dimen/dis1"
                app:riv_corner_radius="@dimen/dis360"/>

            <com.yj.cosmetics.widget.RoundedImageView.RoundedImageView
                android:id="@+id/ri_img"
                android:layout_width="@dimen/dis50"
                android:layout_height="@dimen/dis50"
                android:scaleType="fitXY"
                android:src="@color/C8A_00_00_00"
                app:riv_corner_radius="@dimen/dis360"/>

            <TextView
                android:id="@+id/tv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="去兑换"
                android:textColor="@color/white"
                android:textSize="@dimen/font12"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_partake_shop_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_partake_shop_name"
            android:layout_marginLeft="@dimen/dis10"
            android:layout_marginTop="@dimen/dis10"
            android:layout_marginRight="@dimen/dis10"
            android:layout_toRightOf="@id/frag_mine_img"
            android:drawableLeft="@mipmap/icon_gold"
            android:drawablePadding="@dimen/dis2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black_gray1"
            android:textSize="@dimen/font13"/>

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_partake_shop_loc"
            android:layout_marginLeft="@dimen/dis10"
            android:layout_marginTop="@dimen/dis8"
            android:layout_marginRight="@dimen/dis10"
            android:layout_toRightOf="@id/frag_mine_img"
            android:text=""
            android:textColor="@color/C66_66_66"
            android:textSize="@dimen/font12"/>

        <TextView
            android:id="@+id/tv_partake_shop_locs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_date_time"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/icon_gold"
            android:drawablePadding="@dimen/dis2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="+1000"
            android:textColor="@color/black_gray1"
            android:textSize="@dimen/font13"/>

        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_date_time"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_solid_corners_12"
            android:drawableLeft="@mipmap/speed"
            android:drawablePadding="@dimen/dis2"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/dis8"
            android:paddingTop="@dimen/dis5"
            android:paddingRight="@dimen/dis8"
            android:paddingBottom="@dimen/dis5"
            android:text="去加速"
            android:textColor="@color/white"
            android:textSize="@dimen/font12"/>

        <TextView
            android:id="@+id/tv_consume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_partake_shop_name"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/CE8_3C_3C"
            android:textSize="@dimen/font13"/>

        <TextView
            android:id="@+id/tv_partake_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/frag_mine_img"
            android:layout_marginLeft="@dimen/dis10"
            android:layout_marginRight="@dimen/dis10"
            android:layout_toLeftOf="@+id/tv_consume"
            android:layout_toRightOf="@id/frag_mine_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/font13"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_top_suprescript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@mipmap/icon_superscript"
        android:visibility="gone"/>
</RelativeLayout>