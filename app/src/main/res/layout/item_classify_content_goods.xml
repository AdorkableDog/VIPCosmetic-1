<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_product_img"
            android:layout_width="@dimen/dis105"
            android:layout_height="@dimen/dis105"
            android:scaleType="fitXY"
            android:src="@mipmap/default_goods"/>

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/vip"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dis8"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/C10_10_10"
        android:textSize="@dimen/font14"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dis8"
            android:text="￥"
            android:textColor="@color/CC8_3C_3C"
            android:textSize="@dimen/font14"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dis8"
            android:maxLines="1"
            android:text="￥"
            android:textColor="@color/C85_85_85"
            android:textSize="@dimen/font12"/>
    </LinearLayout>
</LinearLayout>